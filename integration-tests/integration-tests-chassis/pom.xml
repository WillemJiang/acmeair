<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>integration-tests</artifactId>
        <groupId>acmeair</groupId>
        <version>2.0.0-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>integration-tests-chassis</artifactId>

    <dependencies>
        <dependency>
            <groupId>acmeair</groupId>
            <artifactId>integration-tests-common</artifactId>
            <type>test-jar</type>
        </dependency>
    </dependencies>

    <profiles>
        <profile>
            <id>docker</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>io.fabric8</groupId>
                        <artifactId>docker-maven-plugin</artifactId>
                        <configuration>
                            <images>
                                <image>
                                    <name>mongo</name>
                                    <alias>acmeair-mongo</alias>
                                    <run>
                                        <wait>
                                            <log>waiting for connections on port</log>
                                            <time>60000</time>
                                        </wait>
                                        <ports>
                                            <port>mongo.port:27017</port>
                                        </ports>
                                    </run>
                                </image>
                                <image>
                                    <name>seanyinx/sc</name>
                                    <alias>service-center</alias>
                                    <run>
                                        <wait>
                                            <log>listen on server</log>
                                            <time>60000</time>
                                        </wait>
                                        <ports>
                                            <port>service.center.port:9980</port>
                                        </ports>
                                    </run>
                                </image>
                                <image>
                                    <name>acmeair-customer-service:${project.version}</name>
                                    <alias>customer-service</alias>
                                    <run>
                                        <env>
                                            <JAVA_OPTS>
                                                -Dcse.service.registry.address=http://sc.servicecomb.io:9980
                                                -Dspring.profiles.active=jpa,cse
                                                -Dserver.port=8080
                                                -Dcse.highway.address=0.0.0.0:7072
                                                -Dcse.rest.address=0.0.0.0:8082
                                                -Dcse.grpc.address=0.0.0.0:9092
                                            </JAVA_OPTS>
                                            <JAR_NAME>acmeair-customer-service</JAR_NAME>
                                        </env>
                                        <links>
                                            <link>service-center:sc.servicecomb.io</link>
                                        </links>
                                        <wait>
                                            <log>Tomcat started on port</log>
                                            <time>100000</time>
                                        </wait>
                                        <ports>
                                            <port>customer.service.port:8080</port>
                                            <port>customer.rest.port:8082</port>
                                        </ports>
                                        <dependsOn>
                                            <dependsOn>service-center</dependsOn>
                                        </dependsOn>
                                    </run>
                                </image>
                                <image>
                                    <name>acmeair-booking-service:${project.version}</name>
                                    <alias>booking-service</alias>
                                    <run>
                                        <env>
                                            <JAVA_OPTS>
                                                -Dcse.service.registry.address=http://sc.servicecomb.io:9980
                                                -Dspring.profiles.active=mongodb,cse
                                                -Dserver.port=8080
                                                -Dspring.data.mongodb.host=mongo.acmeair.com
                                                -Dcse.rest.address=0.0.0.0:8082
                                            </JAVA_OPTS>
                                            <JAR_NAME>acmeair-booking-service</JAR_NAME>
                                        </env>
                                        <links>
                                            <link>acmeair-mongo:mongo.acmeair.com</link>
                                            <link>service-center:sc.servicecomb.io</link>
                                        </links>
                                        <wait>
                                            <log>Tomcat started on port</log>
                                            <time>100000</time>
                                        </wait>
                                        <ports>
                                            <port>booking.service.port:8080</port>
                                        </ports>
                                        <dependsOn>
                                            <dependsOn>acmeair-mongo</dependsOn>
                                            <dependsOn>service-center</dependsOn>
                                        </dependsOn>
                                    </run>
                                </image>
                                <image>
                                    <name>acmeair-proxy:${project.version}</name>
                                    <alias>gateway</alias>
                                    <run>
                                        <env>
                                            <JAVA_OPTS>
                                                -Dcse.service.registry.address=http://sc.servicecomb.io:9980
                                            </JAVA_OPTS>
                                        </env>
                                        <links>
                                            <link>service-center:sc.servicecomb.io</link>
                                        </links>
                                        <wait>
                                            <log>Catalina.start Server startup in</log>
                                            <time>100000</time>
                                        </wait>
                                        <ports>
                                            <port>gateway.port:8080</port>
                                        </ports>
                                        <dependsOn>
                                            <dependsOn>service-center</dependsOn>
                                        </dependsOn>
                                    </run>
                                </image>
                            </images>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>